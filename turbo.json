{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["NODE_LINKER"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"env": [
				"POSTGRES_PASSWORD",
				"PUBLIC_URL",
				"DATABASE_HOST_URL",
				"DIRECT_URL"
			]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"ci": {
			"dependsOn": ["build", "lint", "test"]
		},
		"db:migrate": {
			"env": ["DATABASE_HOST_URL", "DIRECT_URL"]
		},
		"test": {}
	}
}
